{
  "DLLPath": "C:\\Users\\R\\source\\repos\\WebApiTemplate\\dotnet5\\AppDlls",
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "My dev Database connection string"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Fatal",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "withMachineName", "withProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Users\\R\\source\\repos\\WebApiTemplate\\dotnet5\\Log\\log.txt",
          "rollOnFileSizeLimit": "true",
          "fileSizeLimitBytes": "10000000",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj} -- {Properties}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Users\\R\\source\\repos\\WebApiTemplate\\dotnet5\\Log\\log.json",
          "rollOnFileSizeLimit": "true",
          "fileSizeLimitBytes": "10000000",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "Http",
        "Args": {
          "requestUri": "https://localhost:6001/api/1.0/serilog/post-log                                     ",
          "textFormatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ]
  }
}
